#include <iostream>
#include <fstream>
#include <vector>

using namespace std;

class Product {
public:
    string ime;

    Product(string i, double c) : ime(i), cena(c) {}

    void Display() const {
        cout << ime << " " << GetCena() << "lv." << endl;
    }
    double GetCena() const {
        return cena;
    }
private:
    double cena;
};

int main() {
    vector<Product> products;

    string productName;
    double productPrice;

    while (true) {
        cout << "Enter product (type 'stop' to stop entry): ";
        cin >> productName;

        if (productName == "stop") {
            break;
        }

        cout << "Enter price: ";
        cin >> productPrice;

        Product product(productName, productPrice);
        products.push_back(product);
    }

    cout << "Price list:" << endl;
    for (const auto& product : products) {
        product.Display();
    }

    ofstream outputFile("product_list.txt");
    if (outputFile.is_open()) {
        for (const auto& product : products) {
            outputFile << product.ime << " " << product.GetCena() << endl;
        }
        outputFile.close();
        cout << "The list of products is saved at 'product_list.txt'." << endl;
    }
    else {
        cerr << "Error saving to file." << endl;
    }

    return 0;
}
